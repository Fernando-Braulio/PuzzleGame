<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleGame.Views.PuzzleGamePage"
             Title="PuzzleGamePage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label x:Name="movesLabel" Text="Movimentos: 0" FontSize="Large" HorizontalOptions="Center" />
            <Label x:Name="timeLabel" Text="Tempo: 0 segundos" FontSize="Large" HorizontalOptions="Center" />
            <Grid x:Name="puzzleGrid" Margin="10" RowSpacing="2" ColumnSpacing="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <!-- Os botões representando as peças do quebra-cabeça serão adicionados aqui dinamicamente -->
            </Grid>
            <Button Text="Reiniciar" Clicked="RestartButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
