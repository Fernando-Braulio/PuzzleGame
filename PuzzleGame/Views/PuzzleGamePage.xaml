<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleGame.Views.PuzzleGamePage"
             Title="Number Puzzle Game">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="levelLabel" Text="Nível: 1" FontSize="18" HorizontalOptions="CenterAndExpand" />
            <Label x:Name="movesLabel" Text="Movimentos: 0" FontSize="18" HorizontalOptions="CenterAndExpand" />
            <Label x:Name="movesLimit" Text="Limite de Movimentos: 0" FontSize="18" HorizontalOptions="CenterAndExpand" />
            <!--<Label x:Name="timeLabel" Text="Tempo: 0 segundos" FontSize="Large" HorizontalOptions="Center" />-->
            <Grid x:Name="puzzleGrid" Margin="10" RowSpacing="2" ColumnSpacing="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <!-- Os botões representando as peças do quebra-cabeça serão adicionados aqui dinamicamente -->
            </Grid>
            <Button Text="Embaralhar" Clicked="RestartButton_Clicked" />
            <Button Text="Teste" Clicked="TesteClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
